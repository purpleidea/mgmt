# /etc/systemd/system/mgmt.service
[Unit]
Description=Mgmt configuration management service
Documentation=https://github.com/purpleidea/mgmt/
After=local-fs.target
Wants=local-fs.target

[Service]
ExecStart={{ .exec }} run {{ if .ssh_url }}--ssh-url='{{ .ssh_url }}'{{ end }} {{ if .ssh_hostkey }}--ssh-hostkey='{{ .ssh_hostkey }}'{{ end }} {{ .valid_seeds }} --no-autoedges empty $OPTS
RestartSec=5s
Restart=always
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
